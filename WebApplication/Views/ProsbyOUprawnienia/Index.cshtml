@{
    ViewData["Title"] = "Prośby o uprawnienia";
}

@{
    <div class="tab-pane fade show" role="tabpanel">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Uzytkownik</th>
                    <th scope="col">Rola</th>
                    <th scope="col">Prosba</th>
                    <th scope="col">Decyzja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.allRequests)
                {
                <tr>
                    <td>@item.uzytkownik.login</td>
                    <td>@item.rola.nazwa</td>
                    <td>@item.prosba_pisemna</td>
                    <td>
                        <form method="POST" asp-action="Accept" asp-route-idu="@item.id_uzytkownika" asp-route-idr="@item.id_roli">
                                <input type="submit" value="Akceptuj" />
                        </form>
                        <form method="POST" asp-action="Delete" asp-route-idu="@item.id_uzytkownika" asp-route-idr="@item.id_roli">
                            <input type="submit" value="Odrzuc" />
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>

}