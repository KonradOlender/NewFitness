@{
}

<div class="row">

    <div class="col-md-3">
        <form method="post">
            <div class="form-group">
                <label for="dzien">Dzień</label>
                <input type="text" class="form-control" id="dzien" name="dzien" placeholder="dzien">
            </div>

            <div>
                <button type="submit" class="btn btn-primary" href="~/TreningList">Submit</button>
            </div>
        </form>
    </div>

    <div class="col-md-9">
        <h1>@ViewBag.polecany.nazwa</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Opis</th>
                    <th scope="col">Liczba powtórzeń</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.trainingDetails)
                {
                    <tr>
                        <th scope="row">@item.cwiczenie.nazwa</th>
                        <td>@item.cwiczenie.opis</td>
                        <td>@item.liczba_powtorzen</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>