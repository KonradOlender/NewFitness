@model IEnumerable<WebApplication.Models.Trening>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Treningi</h1>

<p>
    <a asp-action="Create">Stwórz nowy trening</a>
</p>
<hr />
@using (Html.BeginForm("Index", "Trening", FormMethod.Get, new { id = ViewBag.trainingId }))
{
<fieldset>
    @Html.TextBox("searchString")

    @Html.DropDownList("category")

    <p>
        <input type="submit" value="Filtruj" />
    </p>

</fieldset>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            @if (ViewBag.trainersIds.Contains(item.id_uzytkownika) || item.id_uzytkownika == ViewBag.userId)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nazwa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.kategoria.nazwa)
                    </td>
                    <td>
                        @if (ViewBag.userId == item.id_uzytkownika)
                        {
                            <a asp-action="Delete" asp-route-id="@item.id_treningu">Usuń</a> <br />
                            <a asp-action="Edit" asp-route-id="@item.id_treningu">Edytuj</a> <br />
                        }
                        <a asp-action="Details" asp-route-id="@item.id_treningu">Szczegóły</a> <br />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
