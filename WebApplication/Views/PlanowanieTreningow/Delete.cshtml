@model WebApplication.Models.PlanowanieTreningow

@{
    ViewData["Title"] = "Usuń zaplanowany trening";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuń</h1>

<h3>Jesteś pewien, że chcesz usunąć trening z listy planowanych?</h3>
<div>
    <h4>Planowany Trening</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.uzytkownik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.uzytkownik.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.trening)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.trening.nazwa)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_uzytkownika" />
        <input type="hidden" asp-for="id_treningu" />
        <input type="hidden" asp-for="data" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrot do listy</a>
    </form>
</div>
