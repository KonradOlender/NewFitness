@model IEnumerable<WebApplication.Models.PlanowanieTreningow>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Zaplanowane treningi</h1>

<p>
    <a asp-action="Create">Zaplanuj trening</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.trening)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.trening.nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.id">Usuń</a> <br />
                <a asp-action="Details" asp-route-id="@item.id">Szczegóły</a> <br />
            </td>
        </tr>
}
    </tbody>
</table>
