@model IEnumerable<WebApplication.Models.Rola>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Role</h1>

<p>
    <a asp-action="Create">Stwórz nową</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazwa)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.id_roli">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
