@model WebApplication.Models.KategoriaCwiczenia

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/navigation.css">
</head>
<body>
    <h1>Szczegóły</h1>

    <div>
        <h4>Kategoria Ćwiczenia</h4>
        <hr />
        <nav class="navigation text-center">
            <a asp-action="Edit" asp-route-id="@Model.id_kategorii" style="text-decoration:none"><button class="navigation">Edytuj</button></a> @*|
                <a asp-action="Index">Powrót do listy kategorii</a>*@
        </nav>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nazwa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nazwa)
            </dd>
        </dl>
    </div>
    <div>
        <ul class="training">
            @foreach (Cwiczenie cw in Model.cwiczenia)
            {
                <li class="training">
                    <b>Nazwa:</b>
                    @cw.nazwa
                    <a asp-controller="Cwiczenie" asp-action="Details" asp-route-id="@cw.id_cwiczenia">Zobacz</a>
                </li>
            }
        </ul>
    </div>

    </body>
</html>