@model WebApplication.Models.KategoriaCwiczenia

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Kategoria Ćwiczenia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nazwa)
        </dd>
    </dl>
</div>
<div>
    <ul>
        @foreach (Cwiczenie cw in Model.cwiczenia)
        {
        <li>
            <b>Nazwa:</b>
            @cw.nazwa
            <a asp-controller="Cwiczenie" asp-action="Details" asp-route-id="@cw.id_cwiczenia">Zobacz</a>
        </li>
        }
    </ul>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.id_kategorii">Edytuj</a> @*|
        <a asp-action="Index">Powrót do listy kategorii</a>*@
</div>
