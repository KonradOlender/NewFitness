@model IEnumerable<WebApplication.Models.KategoriaTreningu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Kategorie Treningu</h1>
    <hr />
    <p>
        <a asp-action="Create">Stwórz nową kategorie</a>
    </p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Szukaj: <input type="text" name="SearchString" value="@ViewData["currentSearchString"]" />
            <input type="submit" value="Szukaj" class="btn btn-default" /> |
            <a asp-action="Index">Wyczyść wyszukiwanie</a>
        </p>
    </div>
</form>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazwa)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id_kategorii">Szczegóły</a> <br />

                @if (item.id_kategorii != ViewBag.DefaultCategory.id_kategorii && ViewBag.isTrainer)
                {

                    <a asp-action="Delete" asp-route-id="@item.id_kategorii">Usuń</a> <br />
                    <a asp-action="Edit" asp-route-id="@item.id_kategorii">Edytuj</a> <br />
                }
            </td>
        </tr>
}
    </tbody>
</table>
