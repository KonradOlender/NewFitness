    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuń</h1>

<h3>Napewno chcesz usunąć ten składnik?</h3>
<div>
    <h4>Składnik</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.waga)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.waga)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kalorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kalorie)
        </dd>
        <dt class = "col-sm-2">
