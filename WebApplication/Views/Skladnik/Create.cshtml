@model WebApplication.Models.Skladnik

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodaj nowy składnik</h1>

<h4>Składnik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nazwa" class="control-label"></label>
                <input asp-for="nazwa" class="form-control" />
                <span asp-validation-for="nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="waga" class="control-label"></label>
                <input asp-for="waga" class="form-control" />
                <span asp-validation-for="waga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kalorie" class="control-label"></label>
                <input asp-for="kalorie" class="form-control" />
                <span asp-validation-for="kalorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bialko" class="control-label"></label>
                <input asp-for="bialko" class="form-control" />
                <span asp-validation-for="bialko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tluszcze" class="control-label"></label>
                <input asp-for="tluszcze" class="form-control" />
                <span asp-validation-for="tluszcze" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weglowodany" class="control-label"></label>
                <input asp-for="weglowodany" class="form-control" />
                <span asp-validation-for="weglowodany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_kategorii" class="control-label">Wybierz kategorie:</label>
                <select asp-for="id_kategorii" class="form-control" asp-items="ViewBag.id_kategorii"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Powrót do listy składników</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
