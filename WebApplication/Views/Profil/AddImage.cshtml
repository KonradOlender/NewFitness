@{
    <p>@ViewBag.Message</p>
    @if (ViewBag.user)
    {
<asp:RegularExpressionValidator ID="uplValidator" runat="server" ControlToValidate="file1"
                                ErrorMessage=".jpg, .png, .svg są dozwolonymi formatami"
                                ValidationExpression="(.+\.([Jj][Pp][Gg])|.+\.([Pp][Nn][Gg])|.+\.([Ss][Vv][Gg]))">
</asp:RegularExpressionValidator>
            <form asp-action="AddImage"
                  asp-controller="Profil"
                  method="post"
                  enctype="multipart/form-data">

                <input type="file"
                       id="file1"
                       name="file1"
                       multiple="multiple" />

                <button type="submit">Prześlij obraz</button>

            </form>
    }

}
