@model WebApplication.Models.Cwiczenie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Stwórz</h1>

<h4>Cwiczenie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nazwa" class="control-label"></label>
                <input asp-for="nazwa" class="form-control" />
                <span asp-validation-for="nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opis" class="control-label"></label>
                <input asp-for="opis" class="form-control" />
                <span asp-validation-for="opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="spalone_kalorie" class="control-label"></label>
                <input asp-for="spalone_kalorie" class="form-control" />
                <span asp-validation-for="spalone_kalorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_kategorii" class="control-label">Wybierz kategorie</label>
                <select asp-for="id_kategorii" class ="form-control" asp-items="ViewBag.id_kategorii"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Powrót do listy ćwiczeń</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
