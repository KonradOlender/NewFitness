@model WebApplication.Models.HistoriaUzytkownika

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj</h1>

<h4>@Model.data - zmiana wprowadzonych danych</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  
            <div class="form-group">
                <label asp-for="waga" class="control-label"></label>
                <input asp-for="waga" class="form-control" />
                <span asp-validation-for="waga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="wzrost" class="control-label"></label>
                <input asp-for="wzrost" class="form-control" />
                <span asp-validation-for="wzrost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Wróć do historii</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
